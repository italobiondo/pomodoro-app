# Ambiente (para o backend controlar validações estritas)
APP_ENV=development

# Domínio/URL do frontend permitido no CORS (dev)
FRONTEND_URL=http://localhost:3000

# Backend (Nest)
PORT=4000

# Postgres (dev docker)
POSTGRES_USER=pomodoro
POSTGRES_PASSWORD=pomodoro
POSTGRES_DB=pomodoro_db
DATABASE_URL=postgresql://pomodoro:pomodoro@postgres:5432/pomodoro_db?schema=public

# Redis (dev docker)
REDIS_URL=redis://redis:6379

# Auth (dev)
GOOGLE_CLIENT_ID=changeme
GOOGLE_CLIENT_SECRET=changeme
GOOGLE_CALLBACK_URL=http://localhost:4000/api/auth/google/callback

# JWT
JWT_ACCESS_TOKEN_SECRET=changeme
JWT_ACCESS_TOKEN_EXPIRES_IN=604800

# Mercado Pago (dev; webhook strict só em production)
MERCADO_PAGO_ACCESS_TOKEN=changeme
MERCADO_PAGO_WEBHOOK_SECRET=changeme

# Throttling
THROTTLE_TTL=60
THROTTLE_LIMIT=120

# Frontend (Next) - IMPORTANTE: seu código lê NEXT_PUBLIC_API_BASE_URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000/api
NEXT_PUBLIC_APP_ENV=development
